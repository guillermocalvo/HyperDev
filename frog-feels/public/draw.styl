palette-color-medium = 34px
palette-color-medium-hover = 34px
palette-color-medium-margin = 2px
palette-color-small = 30px

section.palette
  user-select: none
  margin-bottom: 4rem
  .color-well
    padding-right: 1rem
    display: inline-block
  .color
    position: relative
    display: inline-block
    list-style-type: none
    width: palette-color-medium
    height: palette-color-medium
    border-radius: 100px
    border: 4px solid black
    transition: all 0.1s
    cursor: pointer
    @media(max-width: 400px)
      width: palette-color-small
      height: palette-color-small
      transition: none
    &:hover
      opacity: 0.8
      // width: palette-color-medium-hover
      // height: palette-color-medium-hover
      // margin: palette-color-medium-margin
  .active
    border-color: white
    &:hover
      // opacity: 1
      width: palette-color-medium
      height: palette-color-medium
      margin: 0
  .black
    position: relative
    background-color: black
  .black:before
    content: " ";
    position: absolute;
    border-radius: 100px
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    border: 2px solid secondary;
  .white
    background-color: white
  .key-guide
    font-size: 14px
    color: tertiary
    font-family: menlo
    position: absolute
    left: 40%
    bottom: -75%
    @media(max-width: 400px)
      display: none
  .shuffle
    position: relative
    display: inline-block
    list-style-type: none
    // background-color: transparent
    width: auto
    vertical-align: 80%
    color: secondary
    height: auto
    padding-bottom: 1rem
    // padding-bottom: 1rem
    @media(max-width: 570px)
      vertical-align: 45%
    &:hover
      // width: auto
      // height: auto
      // padding-bottom: 1rem
      color: white
      cursor: pointer
